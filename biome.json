{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "includes": ["**", "!.nx", "!**/node_modules/**", "!**/dist/**"]
  },
  "formatter": {
    "indentStyle": "space",
    "enabled": true,
    "lineWidth": 80
  },
  "javascript": {
    "jsxRuntime": "reactClassic"
  }
}
